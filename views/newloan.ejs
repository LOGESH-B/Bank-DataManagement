
<%- layout('boilerplate') -%>
<%- include("flash")-%>

<div class="container text-center px-0 mt-5 " style="background-color:#b7cfc9;width: 50%;margin-top: 0%;">

    <div>
        <h3 style="font-family:arial;text-align: center;color: whitesmoke;padding: 10px;background-color:#9b2a5e ;">
            LLL Bank</h3>
    </div>
    <form class="py-5" action="/newloan" method="post">
        <div class="row">
            <div class="col-md-6">
                <b>Account Number</b>
            </div>
            <div class="col-md-6">
                <input type="text" name="acc_no" required>
            </div>
        </div><br>
        <div class="row">
            <div class="col-md-6">
                <b>Loan Amount</b>
            </div>
            <div class="col-md-6">
                <input type="text" name="l_amt" required>
            </div>
        </div><br>
        
        <div class="row">
            <div class="col-md-6">
                <b>PIN</b>
            </div>
            <div class="col-md-6">
                <input type="text" name="pin" required>
            </div>
        </div><br>
      

        <button style="background-color: #9b2a5e; padding: 5px;" class="btn">Apply</button>
    </form>
</div>